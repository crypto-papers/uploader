{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDirs": ["./src/main", "./src/renderer"],
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*"]
}
